      <id>log4j</id>
      <version>1.2.6</version>
    </dependency>
    
    <dependency>
      <id>logkit</id>
      <version>1.0.1</version>
    </dependency>

    <dependency>
      <id>junit</id>
      <version>3.7</version>
    </dependency>

  </dependencies>

  <build>
    <sourceModifications>
      <sourceModification>
        <className>java.util.logging.Logger</className>
        <excludes>
          <exclude>**/Jdk14Logger.java</exclude>
        </excludes>
      </sourceModification>
    </sourceModifications>
  </build>

</project>
